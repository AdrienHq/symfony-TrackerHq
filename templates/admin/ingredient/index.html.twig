{% extends 'base.html.twig' %}

{% block title %}Gestion des ingrédients{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Tous les ingredients</h1>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for ingredient in ingredients %}
                    <tr>
                        <td>{{ingredient.name}}</td>
                        <td>
                            <a href="{{ path('admin.ingredient.edit', {id: ingredient.id } ) }}" class="btn btn-secondary">Editer</a>
                            <form method ="post" action="{{ path('admin.ingredient.delete', {id: ingredient.id}) }}" style="display: inline-block" onsubmit="return confirm('Are you sure ?')">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ingredient.id) }}">
                                <button class="btn btn-danger">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="text-right">
            <a href="{{ path('admin.ingredient.new') }}" class="btn btn-primary">Créer un ingrédient</a>
        </div>
    </div>
{% endblock body %}