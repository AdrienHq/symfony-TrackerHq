{{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.description) }}
    {{ form_row(form.ingredients) }}

    <div class="row">
        {% for ingForm in form.ingredients %}
            <div class="col-xs-4">
                {{ form_row(ingForm) }}
            </div>
        {% endfor %}
    </div>

    {{ form_row(form.imageFile) }}
    <button class="btn-primary">{{ button|default('Valider') }}</button>
{{ form_end(form) }}